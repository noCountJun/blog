<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="mapper.CommentMapper" >

	<select id="getCommentList" resultType="Map" parameterType="Map">
		 SELECT /* commentMapper.xml-> getCommentList 댓글 리스트 Return */ 
			   CMT_ID 
			 , BRD_ID
			 , CMT_CONT
			 , CMT_LOGIN_ID
			 , DEL_YN
			 , TO_CHAR(REG_DT, 'YYYY.MM.DD HH24:MI:SS') AS REG_DT
	      FROM T_CMT_INFO
	     WHERE BRD_ID = #{brdId}
	     ORDER BY REG_DT, CMT_ID
	</select>
	
	<insert id="insertComment" parameterType="Map">
		INSERT INTO /* commentMapper.xml-> insertComment 댓글 저장 Return */ 
		T_CMT_INFO (
			 CMT_ID
		   , BRD_ID
		   , CMT_CONT
		   , CMT_LOGIN_ID
		   , CMT_PASSWORD
		   , REG_DT
		   , MOD_DT
		   , DEL_YN
		) VALUES (
             SEQ_CMT_NO.NEXTVAL,    -- 댓글 시퀀스
             #{brdId},      		-- 게시글 번호
             #{cmtCont},			-- 내용
             #{cmtLoginId}, 		-- 로그인아이디
             #{cmtPassword}, 		-- password
             sysdate,
             sysdate,
             'N'
        )
	</insert>
</mapper>