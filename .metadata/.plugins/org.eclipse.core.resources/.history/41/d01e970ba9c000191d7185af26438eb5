	<select id = "getTime" resultType="string">
	select trunc(sysdate) from dual
	</select>
	
	<insert id="insertCategory" resultType="org.anse.vo.CategoryVO">
		INSERT INTO T_CTG_INFO (
		    CTG_ID,
		    CTG_NM,
		    CTG_DEPTH,
		    UP_CTG_ID,
		    DISP_YN,
		    SORT_NO,
		    REG_DT,
		    MOD_DT
		) VALUES (
		    SEQ_CTG_NO.NEXTVAL,
		    #{ctgNm},
		    #{ctgDepth},
		    #{upCtgId},
		    #{dispYn},
		    #{sortNo},
		    SYSDATE,
		    SYSDATE
		)
	</insert>
